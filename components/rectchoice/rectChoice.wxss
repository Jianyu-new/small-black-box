/* components/rectchoice/rectChoice.wxss */
.container {
  width: 100px;
  height: 100px;
  position: relative; /* 相对定位，用于定位背景图片和文字 */
}

.background {
  width: 100%;
  height: 100%;
  position: absolute; /* 绝对定位，使背景图片覆盖整个矩形区域 */
  top: 0;
  left: 0;
  opacity: 0.5;
}

.text {
  position: absolute; /* 绝对定位，使文字在矩形内 */
  top: 50%; /* 文字垂直居中 */
  left: 50%; /* 文字水平居中 */
  transform: translate(-50%, -50%); /* 通过变换来居中文字 */
  color: white; /* 文字颜色 */
  text-align: center; /* 文字居中对齐 */
}